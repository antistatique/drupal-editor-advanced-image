echo "\nüöî  \033[0;32mRunning Code Sniffer Drupal & DrupalPractice for ./web/modules/contrib/editor_advanced_image/ ...\033[0m"
docker-compose exec drupal ./vendor/bin/phpcs ./web/modules/contrib/editor_advanced_image/

echo "\nüí©  \033[0;32mRunning PHP Mess Detector ...\033[0m"
docker-compose exec drupal phpmd ./web/modules/contrib/editor_advanced_image/ text ./phpmd.xml --suffixes php,module,inc,install,test,profile,theme,css,info,txt --exclude *Test.php,*vendor/*,*/node_modules/*

echo "\nüõÇ  \033[0;32mRunning PHP Copy/Paste Detector ...\033[0m"
docker-compose exec drupal phpcpd ./web/modules/contrib/editor_advanced_image/src --suffix .php --suffix .module --suffix .inc --suffix .install --suffix .test --suffix .profile --suffix .theme --suffix .css --suffix .info --suffix .txt --exclude *.md --exclude *.info.yml --exclude tests --exclude vendor/ --exclude node_modules/

echo "\nüç´  \033[0;32mRunning PhpDeprecationDetector ...\033[0m"
docker-compose exec drupal phpdd ./web/modules/contrib/editor_advanced_image/ --file-extensions php,module,inc,install,test,profile,theme,info --exclude vendor --exclude node_modules

